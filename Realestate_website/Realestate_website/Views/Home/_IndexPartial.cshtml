@using Realestate_website.Data.EfModels
@model List<Advertisement>


<div class="row">
            <div class="col-md-6">
                <strong>Which type of apartment would you prefer:</strong><br/>
                <label class="checkbox-inline"><input type="checkbox" id="studio" value="">Studio</label>
                <label class="checkbox-inline"><input type="checkbox" id="oneroom" value="">One Room</label>
                <label class="checkbox-inline"><input type="checkbox" id="tworooms" value="">Two Rooms</label>
                <label class="checkbox-inline"><input type="checkbox" id="threerooms" value="">Three Rooms</label>
            </div>

            <div class="col-md-3">
                <strong>Sort by: </strong><br />
                <label class="checkbox-inline"><input type="checkbox" id="price" value="">Price</label>
                <label class="checkbox-inline"><input type="checkbox" id="date" value="">Date</label>         
            </div>

            <div class="col-md-3">
                        <input id="filter" type="submit" value="Filter" class="btn btn-default" />
            </div>
                
    </div>
<br />
<div id="addsPlaceholder"></div>





    <hr />
    <table class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>City</th>
                <th>Price</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>


<script src="~/js/filter.js"></script>